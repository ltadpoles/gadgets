.diary {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.diary .diary-img {
  width: 80vw;
}
.diary .diary-content {
  padding: 30rpx;
  line-height: 48rpx;
}
.diary .diary-content .diary-header {
  text-align: center;
}
.diary .button {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}
.diary .button .button-content {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #18b318;
  color: #fff;
  text-align: center;
  line-height: 120rpx;
  font-size: 24rpx;
}
